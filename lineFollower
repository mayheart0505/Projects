#pragma config(Sensor, in1,    lineTrackerRight, sensorLineFollower)
#pragma config(Sensor, in2,    lineTrackerCenter, sensorLineFollower)
#pragma config(Sensor, in3,    lineTrackerLeft, sensorLineFollower)
#pragma config(Sensor, dgtl1,  rightEncoder,   sensorQuadEncoder)
#pragma config(Sensor, dgtl3,  leftEncoder,    sensorQuadEncoder)
#pragma config(Motor,  port1,           rightMotor,    tmotorVex393_HBridge, openLoop)
#pragma config(Motor,  port10,          leftMotor,     tmotorVex393_HBridge, openLoop, reversed)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
  wait1Msec(5000);
	SensorValue[leftEncoder] = 0;
	SensorValue[rightEncoder] = 0;
  //Create and set the threshold for the Line Tracking Sensors.
  int threshold;
  threshold = 1600;

  //Loop forever.
  while(1 == 1)
  {
    //If the left sensor sees dark...
    if(SensorValue(lineTrackerLeft) > threshold)
    {
      //...counter-steer to the left.
      motor[leftMotor]  = 0;
      motor[rightMotor] = 40;
    }
    //If the center sensor sees dark...
    if(SensorValue(lineTrackerCenter) > threshold)
    {
      //...move forward.
      motor[leftMotor]  = 80;
      motor[rightMotor] = 80;
    }
    //If the right sensor sees dark...
    if(SensorValue(lineTrackerRight) > threshold)
    {
      //...counter steer to the right.
      motor[leftMotor]  = 40;
      motor[rightMotor] = 0;
    }
  }

}
